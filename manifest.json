{
  "name": "Auto Dark Mode Toggle",
  "description": "Auto Dark Mode Toggle",
  "version": "1.0",
  "manifest_version": 3,
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": ["content-script.js"]
    }
  ],
  "permissions": ["activeTab", "scripting", "storage"],
  "background" : {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "/images/dark-theme16.png",
      "32": "/images/dark-theme32.png",
      "48": "/images/dark-theme48.png",
      "128": "/images/dark-theme128.png"
    }
  },
  "icons": {
    "16": "/images/dark-theme16.png",
    "32": "/images/dark-theme32.png",
    "48": "/images/dark-theme48.png",
    "128": "/images/dark-theme128.png"
  }
}
